#!/bin/bash
# info: change web domain ip
# options: USER DOMAIN IP [RESTART]
#
# The call is used for changing domain ip


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
user=$1
domain=$2
domain_idn=$2
docroot="${3-public_html}"
restart=$4

# Includes
source $VESTA/func/main.sh
source $VESTA/func/domain.sh
source $VESTA/func/ip.sh
source $VESTA/conf/vesta.conf

# Additional argument formatting
format_domain
format_domain_idn

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '3' "$#" 'USER DOMAIN DOCROOT [RESTART]'
is_format_valid 'user' 'domain'
is_system_enabled "$WEB_SYSTEM" 'WEB_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"
is_object_valid 'web' 'DOMAIN' "$domain"
is_object_unsuspended 'web' 'DOMAIN' "$domain"

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Preparing variables for vhost replace
get_domain_values 'web'
local_ip=$(get_real_ip $IP)
ipv6=$IP6
tempdocroot=$docroot
DOCROOT=$docroot

if [ "$PROXY" = "proxy" ]; then
    url=$docroot
    is_format_valid 'url'
else
    is_format_valid 'docroot'
fi

# Preparing domain variables
prepare_web_domain_values

if [ "$PROXY" = "proxy" ]; then
    # Deleting vhost configuration
    del_web_config "$WEB_SYSTEM" "$TPL.tpl"

    # Deleting SSL configuration and certificates
    if [ "$SSL" = 'yes' ]; then
        del_web_config "$WEB_SYSTEM" "$TPL.stpl"
    fi
else
    # Adding web server config
    add_web_config "$WEB_SYSTEM" "$TPL.tpl"
    if [ "$SSL" = 'yes' ]; then
        add_web_config "$WEB_SYSTEM" "$TPL.stpl"
    fi
fi

# Adding proxy config
if [ ! -z "$PROXY_SYSTEM" ]; then
    add_web_config "$PROXY_SYSTEM" "$PROXY.tpl"
    if [ "$SSL" = 'yes' ]; then
        add_web_config "$PROXY_SYSTEM" "$PROXY.stpl"
    fi
fi

#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Update config
update_object_value 'web' 'DOMAIN' "$domain" '$DOCROOT' "$tempdocroot"

# Restart web server
$BIN/v-restart-web $restart
check_result $? "WEB restart failed" >/dev/null

$BIN/v-restart-proxy $restart
check_result $? "Proxy restart failed" >/dev/null

# Logging
log_history "changed web domain $domain docroot to $DOCROOT"
log_event "$OK" "$ARGUMENTS"

exit
